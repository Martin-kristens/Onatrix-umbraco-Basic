@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = null;
    var pageTitle = !string.IsNullOrEmpty(ViewBag.Title) ? $"(ViewBag.Title) | Onatrix - Financial Solution for Your Business" : "Onatrix - Financial Solution for Your Business";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://kit.fontawesome.com/a576612222.css" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/theme.css">
    <link rel="stylesheet" href="/css/design-palette.css">
    <title>@pageTitle</title>
</head>
<body>
    <div class="wrapper">
        <header class="bg-primary">
            <div class="container">
                <p>Klarabergsviadukten 90, 111 64 Stockholm</p>
                <div class="social-media">
                    <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="#"><i class="fa-brands fa-twitter"></i></a>
                    <a href="#"><i class="fa-brands fa-linkedin-in"></i></a>
                </div> 
            </div>                    
        </header>

        <section class="nav bg-light">
            <div class="container">
                <a href="/index.html"><img src="~/Brand.svg" alt="Ontarix logo"></a>
          
                <div>
                    <!-- <i class="fa-solid fa-bars"></i> -->
                    <nav>
                        <a href="/about.html">About</a> 
                        <a href="/services.html">Services</a> 
                        <a href="/projects.html">Projects</a> 
                        <a href="/contact.html">Contact</a>   
                     </nav>
                </div>
                <i class="fa-solid fa-magnifying-glass"></i>
            </div>          
        </section> 

        <main>
          @RenderBody()  
        </main>

        <footer class="bg-dark">            
            <div class="container">
                <p>© Onatrix. All Rights Reserved. Credits to <span>Themesflat</span></p>
            </div>
        </footer>
    </div>
    <script src="/scripts/main.js"></script>
</body>
</html>